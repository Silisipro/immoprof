<html lang="fr">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

        <title> {% block title %}
           Liste des utilisateurs suprimés
        {% endblock %}</title>
   <meta content="" name="description">
   <meta content="" name="keywords">

    {% block stylesheets  %}
    {% include 'admin/partiel/stulo.html.twig' %}
    {% endblock %}


</head>

<body>

    {% block header %}
        {% include 'admin/partiel/header.html.twig' %}
    {% endblock %}


    {% block body %}
        {% include 'admin/partiel/body.html.twig' %}
    
        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body py-2">
                            <h1 class="card-title">Liste des utilisateurs supprimés</h1>

                            <!-- Table with stripped rows -->
                            <table class="table table-striped">
                                <thead>

                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Numéro de téléphone</th>
                                    <th scope="col">Email</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>{{user.fullName}}</td>
                                        <td>{{user.telephone}}</td>
                                        <td>{{user.email}}</td>
                                        <td>
                                            <a href="{{ path('admin_index', {'id': user.id}) }}" title="Afficher" class="btn btn-info btn-sm">
                                                <i class="bi bi-eye text-white"></i>
                                            </a>
                                            <a href="{{path('app_user_debloquer', {'id': user.id})}}" title="Débloqué" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center">Aucun enregistrement</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
               </div>
            </div>    
       </section>

        </main><!-- End #main -->
        {% endblock %}

            {% block footer %}
            {% include 'admin/partiel/footer.html.twig' %}
                
            {% endblock %}
   </body>

</html>