{% extends 'admin/partiel/stulo.html.twig' %}
{% block title %}
Immopro | Modification de l'utilisateur
{% endblock %}

{% block body %}
  <div class="card mb-3">
      {% for message in app.flashes('warning') %}
        <div class = 'alert alert-warning mt-4'>
          {{message}}
        </div>
      {% endfor %}

      <div class="card-body">
      {{ form_start(form) }}

        <div class="pt-4 pb-2">
        <h5 class="card-title text-center pb-0 fs-4">Edition de profil</h5>
            <p class="text-center small">Modifier vos informations de compte</p>
        </div>

          <form class="row g-3 needs-validation" novalidate>
              <div class="col-12">
                {{ form_row(form.fullName) }}
                <div class="invalid-feedback">Please, enter your name!</div>
              </div>

              <div class="col-12">
                {{ form_row(form.telephone) }}
                  <div class="invalid-feedback">Please enter a valid phone numbuer!. </div>
              </div>
              <div class="col-12">
                {{ form_row(form.lieu) }}
                    <div class="invalid-feedback">Please, enter your name!</div>
              </div>
              <div class="col-12">                 
                {{ form_row(form.email) }}
                  <div class="invalid-feedback">Please enter a valid Email adddress!.</div>
              </div>
              <div class="col-12 mb-3">
                {{ form_row(form.plainPassword) }}
                  <div class="invalid-feedback">Please enter your password!</div>
              </div>
              <div class="col-12 mb-3" >
                <button class="btn btn-primary w-100" type="submit">Enr√©gistrer mes nouvelles informations</button>
              </div>
          </form>     
    </div>
{% endblock %}