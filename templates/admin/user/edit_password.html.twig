{% extends 'admin/partiel/stulo.html.twig' %}
{% block title %}
Immopro | Modification du mot de passe utilisateur
{% endblock %}

{% block body %}
 
  <div class="card mb-3">
      {% for message in app.flashes('warning') %}
        <div class = 'alert alert-warning mt-4'>
               {{message}}
        </div>
       {% endfor %}
        <div class="card-body">
                  {{ form_start(form) }}

                  <div class="pt-4 pb-2">
                    <h5 class="card-title text-center pb-0 fs-4">Modification de mot de passe</h5>
                  </div>
                    <div class="col-12">
                             {{ form_row(form.plainPassword) }}
                      <div class="invalid-feedback">Please enter your password!</div>
                    </div>
                    <div class="col-12">
                             {{ form_row(form.newPassword) }}
                      <div class="invalid-feedback">Please enter your password!</div>
                    </div>
                     {{ form_widget(form) }}

                    <div class="col-12 mt-4">
                      <button class="btn btn-primary w-100" type="submit">Modifier</button>
                    </div>
                  </form>
                 {{ form_end(form) }}

        </div>
  </div>   

      
{% endblock %}